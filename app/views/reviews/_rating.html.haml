=form_for [@video, @review] do |f|
  %fieldset
    .form-group
      %label Rate this video
      .row
        .col-sm-3
          = f.select(:rating, options_for_select( [['5 stars', 5], ['4 stars', 4], ['4 stars', 4], ['2 stars', 2], ['1 stars', 1]], @review.rating), include_blank: true )
    .form-group
      %label Write Review
      .row
        .col-sm-8
          = f.text_area(:review_description, rows: "6", class: "form-control")
  %fieldset.form-group.actions.clearfix
    = f.submit("Submit", class: "btn")
    = link_to "Cancel", @video    

