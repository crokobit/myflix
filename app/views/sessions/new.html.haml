%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag '/login' do |f|
        %header
          %h1 Sign in
        %fieldset
          .form-group
            = label_tag :email
            .row
              .col-sm-4
                = text_field_tag :email,nil ,class: "form-control"
          .form-group
            = label_tag :password
            .row
              .col-sm-4
                = text_field_tag :password, nil, class: "form-control"
        %fieldset.form-group.action
          = submit_tag 'Login', class: "btn btn-default"
          = link_to "Forget Password", enter_email_path, class: "btn btn-default"

