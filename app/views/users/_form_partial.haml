%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      %fieldset
        = bootstrap_form_for(@user, left: "col-sm-2", right: "col-sm-6", style: :horizontal) do |f|
          %header
            %h1 Register
          = hidden_field_tag 'token', @invite_user.token
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
          = f.text_field :name, label: "Full Name"
          = f.form_group do
            = f.submit "Sign Up", html: { class: "btn btn-default" }
